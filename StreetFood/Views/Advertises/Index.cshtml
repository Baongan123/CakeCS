@model List<Advertises>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Advertises management";
}
<h1>@ViewBag.Title</h1>
<div class="card shadow mb-4">
    <div class="card-header row py-3">
        <div>
            <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
        </div>
        <div class="ml-auto" style="padding-right:30px">
            <a asp-controller="Category" asp-action="Create" class="btn btn-warning" style="width:150px">Create</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var advertises in Model)
                        {
                            {
                                <tr>
                                    <td>
                                        @advertises.Id
                                    </td>
                                    <td>
                                        @advertises.Title
                                    </td>
                                    <td>
                                        <img src="~/Images/Advertises/@advertises.Img" style="width:80%;height:300px"/>
                                    </td>
                                    <td>
                                        <a asp-controller="Advertises" asp-action="Edit" asp-route-id="@advertises.Id" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                      
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
